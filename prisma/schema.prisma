// Format with npx prisma format

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id                   String                 @id @default(cuid())
  name                 String
  email                String                 @unique
  createdAt            DateTime               @default(now()) @map(name: "created_at")
  updatedAt            DateTime               @updatedAt @map(name: "updated_at")
  workDays             Int[]
  isNewUser            Boolean                @default(true)
  numDaysOff           Int                    @default(0)
  Assignment           Assignment[]
  Employee             Employee[]
  shiftsCreated        Shift[]

  @@map(name: "users")
}

model Employee {
  id         String       @id @default(cuid())
  name       String
  email      String
  Assignment Assignment[]
  User       User         @relation(fields: [employedBy], references: [id])
  employedBy String

  @@map(name: "employees")
}

model Shift {
  id                   String                 @id @default(cuid())
  name                 String
  startTime            String
  endTime              String
  Assignment           Assignment[]
  User                 User                   @relation(fields: [createdBy], references: [id])
  createdBy            String

  @@map(name: "shifts")
}

// Represents an employee, assigned to a shift by a user
model Assignment {
  id         String   @id @default(cuid())
  Employee   Employee @relation(fields: [assignedTo], references: [id], onDelete: Cascade)
  Shift      Shift    @relation(fields: [shift], references: [id], onDelete: Cascade)
  User       User     @relation(fields: [assignedBy], references: [id])
  day        Int
  assignedBy String
  shift      String
  assignedTo String

  @@map(name: "assignments")
}
