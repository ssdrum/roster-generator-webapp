// Format with npx prisma format

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id                   String                 @id @default(cuid())
  name                 String
  email                String                 @unique
  createdAt            DateTime               @default(now()) @map(name: "created_at")
  updatedAt            DateTime               @updatedAt @map(name: "updated_at")
  workDays             Int[]
  Assignment           Assignment[]
  Employee             Employee[]
  shiftsCreated        Shift[]
  NumEmployeesAssigned NumEmployeesAssigned[]

  @@map(name: "users")
}

model Employee {
  id         String       @id @default(cuid())
  name       String
  email      String
  Assignment Assignment[]
  User       User         @relation(fields: [employedBy], references: [id])
  employedBy String

  @@map(name: "employees")
}

model Shift {
  id                   String                 @id @default(cuid())
  name                 String
  startTime            String
  endTime              String
  Assignment           Assignment[]
  User                 User                   @relation(fields: [createdBy], references: [id])
  createdBy            String
  NumEmployeesAssigned NumEmployeesAssigned[]

  @@map(name: "shifts")
}

// Represents an employee, assigned to a shift by a user
model Assignment {
  id         String   @id @default(cuid())
  Employee   Employee @relation(fields: [assignedTo], references: [id])
  Shift      Shift    @relation(fields: [shift], references: [id], onDelete: Cascade)
  User       User     @relation(fields: [assignedBy], references: [id])
  day        Int
  assignedBy String
  shift      String
  assignedTo String

  @@map(name: "assignments")
}

model NumEmployeesAssigned {
  id          String        @id @default(cuid())
  shift       String
  Shift       Shift         @relation(fields: [shift], references: [id], onDelete: Cascade)
  countPerDay CountPerDay[]
  User        User?         @relation(fields: [userId], references: [id])
  userId      String?

  @@map(name: "num_employees_assigned")
}

model CountPerDay {
  id                     String                @id @default(cuid())
  day                    Int
  numAssigned            Int
  NumEmployeesAssigned   NumEmployeesAssigned? @relation(fields: [numEmployeesAssignedId], references: [id])
  numEmployeesAssignedId String?

  @@map(name: "count_per_day")
}
