generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id         String       @id @default(cuid())
  name       String
  email      String       @unique
  createdAt  DateTime     @default(now()) @map(name: "created_at")
  updatedAt  DateTime     @updatedAt @map(name: "updated_at")
  Assignment Assignment[]

  @@map(name: "users")
}

model Employee {
  id         String       @id @default(cuid())
  name       String
  email      String?      @unique
  Assignment Assignment[]

  @@map(name: "employees")
}

model Shift {
  id         String       @id @default(cuid())
  name       String
  startTime  String
  endTime    String
  Assignment Assignment[]

  @@map(name: "shifts")
}

model Assignment {
  id         String   @id @default(cuid())
  assignedTo Employee @relation(fields: [employeeId], references: [id])
  employeeId String
  shiftType  Shift    @relation(fields: [shiftId], references: [id])
  shiftId    String
  assignedBy User     @relation(fields: [userId], references: [id])
  userId     String
  day        Int

  @@map(name: "assignments")
}
